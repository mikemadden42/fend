{
	"name": "fend-web",
	"private": true,
	"version": "0.0.0",
	"description": "Arbitrary-precision unit-aware calculator",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"format": "prettier --write .",
		"lint": "eslint ."
	},
	"dependencies": {
		"fend-wasm": "file:../wasm/fend-wasm",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-svg-spinners": "^0.3.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"@types/node": "^24.0.13",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.6.0",
		"babel-plugin-react-compiler": "^19.1.0-rc.2",
		"eslint": "^9.31.0",
		"eslint-plugin-react-hooks": "^6.0.0-rc.1",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.36.0",
		"vite": "^7.0.4",
		"vite-plugin-wasm": "^3.5.0"
	},
	"overrides": {
		"react-svg-spinners": {
			"react": "$react",
			"react-dom": "$react-dom"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/printfn/fend.git"
	},
	"author": "printfn",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/printfn/fend/issues"
	},
	"homepage": "https://github.com/printfn/fend#readme",
	"prettier": {
		"useTabs": true,
		"arrowParens": "avoid",
		"singleQuote": true,
		"printWidth": 120
	}
}
